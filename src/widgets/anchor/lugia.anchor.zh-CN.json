    "data": {
      "desc": "指定跳转页面的数据",
      "type": "Object[]",
      "designOnly": true,
      "injectProps": false,
      "defaultValue": [
        {
          "value": "跳转页面链接1",
          "title": "标题1"
        },
        {
          "value": "跳转页面链接2",
          "title": "标题2"
        },
        {
          "value": "跳转页面链接3",
          "title": "标题3"
        }
      ],
      "meta": [
        {
          "key": "value",
          "title": "对应字段",
          "type": "string"
        },
        {
          "key": "title",
          "title": "展示文字",
          "type": "string"
        }
      ]
    }
  },
  "events": {
    "onClick": {
      "desc": "点击锚点时触发",
