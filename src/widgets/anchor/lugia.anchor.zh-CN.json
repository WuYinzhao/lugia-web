{
  "widgetName": "Anchor",
  "title": "锚点",
  "aliasName": null,
  "desc": "用于跳转到页面指定位置。",
  "tag": "锚点 Anchor 跳至 页面节点",
  "needExport": true,
  "props": {
    "affix": {
      "desc": "是否固定在窗口",
      "type": "boolean",
      "designOnly": false,
      "injectProps": false,
      "defaultValue": true
    },
    "offsetTop": {
      "desc": "距离窗口顶部达到指定值后触发",
      "type": "number",
      "designOnly": false,
      "injectProps": false
    },
    "offsetBottom": {
      "desc": "距离窗口底部达到指定值后触发",
      "type": "number",
      "designOnly": false,
      "injectProps": false
    },
    "slideType": {
      "desc": "分割线样式",
      "type": "SlideType",
      "designOnly": false,
      "injectProps": false,
      "defaultValue": "circle"
    },
    "slideLine": {
      "desc": "是否展示分割线",
      "type": "boolean",
      "designOnly": false,
      "injectProps": false,
      "defaultValue": true
    },
    "useHref": {
      "desc": "是否启用a标签的href属性",
      "type": "boolean",
      "designOnly": false,
      "injectProps": false,
      "defaultValue": true
    }
  },
  "events": {
    "onClick": {
      "desc": "点击锚点时触发",
      "args": [
        {
          "name": "event",
          "desc": "点击的DOM事件",
          "type": "Object"
        },
        {
          "name": "href",
          "desc": "点击的锚点href值",
          "type": "string"
        }
      ]
    }
  },
  "designInfo": {},
  "category": [
    "其他"
  ],
  "type": {
    "SlideType": [
      {
        "value": "circle",
        "text": "圆型"
      },
      {
        "value": "line",
        "text": "线型"
      }
    ]
  },
  "themeConfig": []
}
