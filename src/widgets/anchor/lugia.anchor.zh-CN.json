    "offsetTop": {
      "desc": "距离窗口顶部达到指定值后触发",
      "type": "number",
      "designOnly": false,
      "injectProps": false
    },
    "offsetBottom": {
      "desc": "距离窗口底部达到指定值后触发",
      "type": "number",
      "designOnly": false,
      "injectProps": false
    },
    "slideType": {
      "desc": "分割线样式",
      "type": "SlideType",
      "designOnly": false,
      "injectProps": false,
      "defaultValue": "circle"
    },
    "slideLine": {
      "desc": "是否展示分割线",
      "type": "boolean",
      "designOnly": false,
      "injectProps": false,
      "defaultValue": true
